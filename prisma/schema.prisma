generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  password      String
  bio           String?
  avatarUrl     String? 
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  papers        Paper[] // Papers uploaded by the user
  bookmarks     Paper[]  @relation("UserBookmarks")
  searchHistory Search[]
}

//   citations    Int        @default(0) add later
model Paper {
  id           String     @id @default(cuid())
  title        String
  abstract     String     @db.Text
  pdfUrl       String?
  doi          String?    @unique
  publishedAt  DateTime?
  uploadedAt   DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  uploadedBy   User       @relation(fields: [userId], references: [id])
  userId       String
  bookmarkedBy User[]     @relation("UserBookmarks")
  downloads    Int        @default(0)
  authors      Author[]
  tags         Tag[]
  categories   Category[]
}

model Author {
  id        String   @id @default(cuid())
  name      String
  papers    Paper[]
  createdAt DateTime @default(now())

  @@unique([name])
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  papers    Paper[]
  createdAt DateTime @default(now())
}

model Search {
  id        String   @id @default(cuid())
  query     String
  filters   Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  papers      Paper[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
